        <a href="{{ url('main_index') }}"><img id="logo" src="{{ asset('img/logo2.png') }}" alt="Zdjęcie przedstawia logo"></a>
        <nav>
            <ol>
                <li><a href="{{ url('main_index') }}"> Strona główna </a></li>
                <li><a href="#"> Lasowiacy </a>
